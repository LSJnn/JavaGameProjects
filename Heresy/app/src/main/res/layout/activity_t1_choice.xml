<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".T1_text"
    android:background="@drawable/main_background">

    <ImageView
        android:id="@+id/t1_c_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbtn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/t1_c_tv1"
        android:text="@string/page26002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1_c_img1"
        app:layout_constraintBottom_toBottomOf="@id/t1_c_tv2"/>

    <TextView
        android:id="@+id/t1_c_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1_c_tv1" />


    <ImageButton
        android:id="@+id/t1_c_btn1"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:layout_marginTop="132dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/t1_c_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1_c_tv1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/t1_c_btn2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="28dp"
        android:padding="15dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/t1_c_btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/t1_c_btn3"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/nextBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="@drawable/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/now"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/now"
        app:layout_constraintEnd_toStartOf="@+id/backbtn"
        app:layout_constraintStart_toEndOf="@+id/skip"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/skip"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/skip_basic"
        app:layout_constraintEnd_toStartOf="@id/now"
        app:layout_constraintStart_toEndOf="@id/endingBtn"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/endingBtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/ending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>