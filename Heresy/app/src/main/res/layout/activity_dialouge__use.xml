<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Dialouge_Use">

    <ImageView
        android:id="@+id/own_zero"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/use_dialouge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/yes"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/yes"
        app:layout_constraintBottom_toBottomOf="@+id/own_zero"
        app:layout_constraintEnd_toStartOf="@+id/no"
        app:layout_constraintStart_toStartOf="@+id/own_zero" />

    <ImageButton
        android:id="@+id/no"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/no"
        app:layout_constraintBottom_toBottomOf="@+id/own_zero"
        app:layout_constraintEnd_toEndOf="@+id/own_zero" />


</androidx.constraintlayout.widget.ConstraintLayout>