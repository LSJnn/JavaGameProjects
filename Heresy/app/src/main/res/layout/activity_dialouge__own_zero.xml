<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Dialouge_Own_zero">

    <ImageView
        android:id="@+id/own_zero"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/own_zero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/assign"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/assign"
        app:layout_constraintBottom_toBottomOf="@+id/own_zero"
        app:layout_constraintEnd_toEndOf="@+id/own_zero"
        app:layout_constraintStart_toStartOf="@+id/own_zero"/>

</androidx.constraintlayout.widget.ConstraintLayout>