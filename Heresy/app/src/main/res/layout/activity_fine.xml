<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fine">

    <ImageView
        android:id="@+id/fine_img1"
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:background="@drawable/fine_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fine_tv1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAlignment="center"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/t1_ti_img1"
        app:layout_constraintEnd_toEndOf="@+id/fine_img1"
        app:layout_constraintStart_toStartOf="@+id/fine_img1"
        app:layout_constraintTop_toTopOf="@+id/fine_img1"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/fine_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/fine_img1"
        app:layout_constraintStart_toStartOf="@+id/fine_img1"
        app:layout_constraintTop_toBottomOf="@+id/fine_tv1" />
    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="@drawable/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/now"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/now"
        app:layout_constraintEnd_toStartOf="@+id/backbtn"
        app:layout_constraintStart_toEndOf="@+id/skip"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/skip"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/skip"
        app:layout_constraintEnd_toStartOf="@id/now"
        app:layout_constraintStart_toEndOf="@id/endingBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/endingBtn"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/ending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>