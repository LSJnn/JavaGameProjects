<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/kakao2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    >

    <ImageView
        android:id="@+id/kakao_bg"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:background="@drawable/kakao_bcg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
    android:id="@+id/kakao_bgtxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/kakao_20_date"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
        android:id="@+id/kakao20_m1"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/kakao20_m1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/kakao20_h1"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/kakao20_h1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/kao_tv1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:fontFamily="@font/malgun"
        android:gravity="center"
        android:textAlignment="textStart"

        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/kakao20_h1"
        app:layout_constraintEnd_toEndOf="@+id/kakao20_h1" />

    <ImageView
        android:id="@+id/kakao20_h2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/kakao20_h2"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
