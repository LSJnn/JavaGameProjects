<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyNoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/cafe24oneprettynight</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@raw/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Dialouge" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/cafe24oneprettynight</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">27dp</item>
    </style>

</resources>
